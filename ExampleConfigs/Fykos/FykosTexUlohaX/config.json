{
    "variables": {
        "mainFolderName": "Serie",
        "taskDirName": "Uloha",
        "fileType": "tex",
        "author": "Daniel Sk√Ωpala",
        
        "url" : "https://fykos.cz/zadani",

        "taskBasicIds": ["1", "2", "3", "4", "5", "E", "S"],
        "taskSourcesIds": ["P"]
    },
    "fileVariables": {
        "01": "01 start-title.txt",
        "02": "02 title-author.txt",
        "03": "03 author-end.txt",
        "03s": "03 author-end (with sources).txt"
    },
    "scriptVariables": {
        "serie": {
            "filename": "findLowestFree",
            "func": "load",
            "args": ["{\\path}", "{mainFolderName}(\\d+)"]
        },
        "taskBasicNames": {
            "filename": "getFykosTasks",
            "func": "load_filtered_tasks",
            "args": ["{url}", "${taskBasicIds}"]
        },
        "taskSourcesNames": {
            "filename": "getFykosTasks",
            "func": "load_filtered_tasks",
            "args": ["{url}", "${taskSourcesIds}"]
        }
    },
    "dir": {
        "{mainFolderName}{serie}": {
            "taskBasic": "${taskBasicNames}",
            "taskSources": "${taskSourcesNames}"
        }
    },
    "templates": {
        "taskBasic": {
            "args": ["folderName", "taskName"],
            "dir": {
                "{taskDirName}{folderName}": {
                    "{taskName}.{fileType}":  "{01}{taskName}{02}{author}{03}",
                    "images": {}
                }
            }
        },
        "taskSources": {
            "args": ["folderName", "taskName"],
            "dir": {
                "{taskDirName}{folderName}": {
                    "{taskName}.{fileType}":  "{01}{taskName}{02}{author}{03s}",
                    "images": {},
                    "sources.bib": ""
                }
            }
        }
    }
}